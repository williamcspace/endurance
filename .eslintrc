{
  "extends": "airbnb",
  "plugins": [
    "react"
  ],
  "rules": {
    "strict": [
      2,
      "global"
    ],
    "no-unused-vars": 1,
    "no-unused-expressions": [
      2,
      {
        "allowShortCircuit": true,
        "allowTernary": true
      }
    ],
    "spaced-comment": [0, "always"]
  },
  "env": {
    "es6": true,
    "node": true,
    "mocha": true,
    "mongo": true,
    "browser": false,
    "jquery": false
  },
  "ecmaFeatures": {
    "modules": false,
    "classes": true,
    "generators": true,
    "blockBindings": true,
    "arrowFunctions": true
  }
}
